package codingTest;

import java.util.Scanner;

public class Test2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();
		
		String[] strAr = new String[num];
		String[] split;
		int score=0;
		for(int i=0; i<strAr.length;i++) {
			strAr[i] = sc.nextLine();
			
			split = strAr[i].split("");
			
			for(int z=0; z<split.length;z++) {
				if(split[z].equals("O")){
					score++;
				}else if(split[z].equals("X")) {
					score=0;
				}
			}
			
		}
		
		
		
		
		
	}

}
